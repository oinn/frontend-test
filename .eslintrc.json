{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "plugin:vue/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "vue/max-attributes-per-line": ["error", {
      "singleline": { "max": 4 },
      "multiline": { "max": 2 }
    }],
    "vue/singleline-html-element-content-newline": ["off", {}]
  }
}
